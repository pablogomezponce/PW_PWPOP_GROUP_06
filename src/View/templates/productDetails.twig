{% extends "base.html.twig" %} {% block title %} {{ title }} {% endblock %} {% block
    content %}
    <p>{{ nomProducte }}</p>
    <div id="likeP" align="right" style="margin-right: 10%">
        <img id="heart"src="{{ base_url() }}/assets/cor_normal.png" width="10%">

    </div>
{% endblock %}

{% block footer %}
    {{ footer }}
{% endblock %}

{% block script %}
<script>


    $("#heart").click(function (ev) {
        //console.log($(this).attr('id'));
        {% if idUser is null %}
        alert("You have to log in to be able to like products :)");
        {% else %}



        $.ajax({
            type: "POST",
            url: "/heartPressed",
            dataType: 'json',
            data: ({idProducte: {{ idProducte }}, idUser: '{{ idUser }}' }),
            success: function (data) {
                console.log(data[0]);


                if (data[0]){
                    $("#heart").attr("src","{{ base_url() }}/assets/cor_normal.png");
                    isLike = false;
                }else{
                    $("#heart").attr("src","{{ base_url() }}/assets/cor_like.png");
                    isLike = true;
                }
            }

        });
        {% endif %}


    });






</script>
{% endblock %}
